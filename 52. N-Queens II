class Solution {
public:
    bool isvalid(vector<string> str,int row,int col)
    {
        int n= str.size();
        int i= row,j=col;
        while(i>=0)
        {
            if (str[i][col]=='Q')  return false;
            i--;
        }
        i=row;
        while(i>=0 && j>=0)
        {
            if (str[i][j]=='Q')  return false;
            i--;
            j--;
        }
        i=row,j=col;
        while(i>=0 && j<n)
        {
            if (str[i][j]=='Q')   return false;
            i--;
            j++;
            
        }
        return true;
    }
    void solve(int curr,int tot,vector<string> str,int &ans)
    {
        if (curr==tot)
        {
            ans++;
            return;
        }
        
        for (int i=0;i<tot;i++)
        {
            if (isvalid(str,curr,i))
            {
                str[curr][i]='Q';
                solve(curr+1,tot,str,ans);
                str[curr][i]='.';
            }
            
        }
    }
    
    int totalNQueens(int n) {
        
         int ans=0;
        vector<string> str;
        string temp;
        for (int i=0;i<n;i++) temp.push_back('.');
        
        for (int i=0;i<n;i++) str.push_back(temp);
        solve(0,n,str,ans);
        return ans;
        
    }
};
